begin transaction;

delete from customers where customer_id = 005;

rollback;
drop table customer;
  
select count(*)  as total_customers from customers;

select avg(total) from customers;
select sum(total) from customers;
select created_at ,count(*) as total_customers from customers group by created_at;
alter table customers rename column phone to mobile_number;
alter table customers add column status text;
update customers set status = "active" where customer_id in(001,003,005,007);
update customers set status = "inactive" where customer_id in(002,004,006);
select * from customers where status = "active" and email is not null;
select * from customers where status = "active" and email is  null;
select * from customers where status = "active" or email is null;
select * from customers where status = "active" and(email like "%gmail.com" or email like "%yahoo.com");

select * from customers;
